{
  "env": {
    "es6": true,
    "jest": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react-native",
    "detox",
    "jest"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "no-use-before-define": 0,
    "object-curly-newline": [
      2,
      {
        "consistent": true,
        "minProperties": 6
      }
    ],
    "react/sort-comp": [
      1,
      {
        "order": [
          "lifecycle",
          "render",
          "static-methods",
          "everything-else"
        ]
      }
    ],
    "no-unused-expressions": [
      2,
      {
        "allowTernary": true
      }
    ],
    "no-underscore-dangle": [
      2,
      {
        "allowAfterThis": true
      }
    ],
    "no-else-return": 0,
    "max-len": [
      2,
      150
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-lonely-if": 0,
  },
  "settings": {
    "import/resolver": {
      "babel-module": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    }
  }
}